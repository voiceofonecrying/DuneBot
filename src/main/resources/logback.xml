<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for Docker/production output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger - INFO level for production -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- More detailed logging for controller package -->
    <logger name="controller" level="DEBUG"/>

    <!-- Optionally reduce noise from libraries -->
    <logger name="net.dv8tion.jda" level="WARN"/>
</configuration>
